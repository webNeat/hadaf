{
  "name": "@hadaf/syntax",
  "description": "A library to parse and stringify Hadaf documents",
  "version": "0.0.3",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "bun test",
    "build": "tsup",
    "prepublish": "bun run build"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "bundle": false,
    "skipNodeModulesBundle": true,
    "outDir": "dist",
    "clean": true
  },
  "prettier": {
    "semi": false,
    "tabWidth": 2,
    "useTabs": false,
    "printWidth": 155,
    "singleQuote": true,
    "trailingComma": "all"
  }
}
